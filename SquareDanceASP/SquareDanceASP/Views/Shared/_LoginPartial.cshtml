@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()
    <ul class="nav" style="width:20%">
        <li class="dropdown" style="height:50px;">
            <i id="DengLuTuBiao" class="fa fa-user dropdown-toggle" data-toggle="dropdown" aria-hidden="true"></i>
            <ul class="dropdown-menu dropdown-menu-right">
                <li>
                    @Html.ActionLink("您好，" + User.Identity.GetUserName(), "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
                </li>
                <li><a class="fa fa-battery-1"></a></li>
                <li>
                    <a href="javascript:document.getElementById('logoutForm').submit()">退出 <i class="fa fa-sign-out"></i></a>
                </li>
            </ul>
        </li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a href="~/Video/Upload" class="btn btn-default">上传</a></li>
        <li><a id="registerLink" href="~/Account/Register">注册<span class="glyphicon glyphicon-user"></span></a></li>
        <li><a id="loginLink" href="~/Account/Login">登录<span class="glyphicon glyphicon-log-in"></span></a></li>
    </ul>
}
